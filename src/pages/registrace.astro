---
import PageShell from '../components/PageShell.astro';
import SiteFooter from '../components/SiteFooter.astro';

const backgroundImage = '/assets/Copy of 3-23f88748.jpg';

const seo = {
  title: 'Registrace | RRInvestments',
  description: 'Založte si účet a získejte přístup k privátním materiálům, portálu a individuální spolupráci.',
  noIndex: true,
  breadcrumbs: [
    { name: 'Domů', url: '/' },
    { name: 'Registrace', url: '/registrace' },
  ],
};
---
<PageShell {seo}>
  <section class="bg-white">
    <div class="mx-auto grid min-h-[80vh] w-full max-w-6xl gap-0 overflow-hidden rounded-3xl px-6 py-20 lg:grid-cols-[1fr_1fr]">
      <div class="relative hidden h-full overflow-hidden rounded-3xl lg:block">
        <img
          src={backgroundImage}
          alt="Designový interiér"
          class="h-full w-full object-cover"
          loading="lazy"
          decoding="async"
        />
      </div>
      <div class="flex flex-col justify-center gap-8 bg-white px-6 py-10 lg:px-12">
        <h1 class="font-serif text-3xl">Registrace</h1>
        <form class="space-y-5">
          <label class="form-control">
            <span class="label-text uppercase tracking-[0.3em] text-xs">Jméno a příjmení</span>
            <input type="text" placeholder="Celé jméno" class="input input-bordered rounded-full bg-muted" />
          </label>
          <label class="form-control">
            <span class="label-text uppercase tracking-[0.3em] text-xs">Email</span>
            <input type="email" placeholder="email@vasefirma.cz" class="input input-bordered rounded-full bg-muted" />
          </label>
          <label class="form-control">
            <span class="label-text uppercase tracking-[0.3em] text-xs">Heslo</span>
            <input type="password" placeholder="••••••••" class="input input-bordered rounded-full bg-muted" />
          </label>
          <button type="button" class="btn btn-neutral w-full rounded-full uppercase tracking-[0.3em]">
            Registrovat se
          </button>
        </form>
        <p class="text-sm">
          Máte účet? <a class="font-semibold text-accent" href="/prihlaseni">Přihlaste se</a>
        </p>
      </div>
    </div>
  </section>

  <SiteFooter />
</PageShell>
