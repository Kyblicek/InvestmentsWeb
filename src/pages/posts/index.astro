---
import PageShell from '../../components/PageShell.astro';
import PageHero from '../../components/PageHero.astro';
import { db } from '../../server/db';

const posts = await db.post.findMany({
  where: {
    status: 'PUBLISHED',
  },
  orderBy: {
    publishedAt: 'desc',
  },
});

const formatDate = (date?: Date | null) =>
  date ? new Intl.DateTimeFormat('cs-CZ', { dateStyle: 'long' }).format(date) : 'Neznámé datum';

const truncate = (input: string, length = 180) => {
  if (input.length <= length) return input;
  return `${input.slice(0, length)}…`;
};

const heroImage = '/assets/Copy of 4-23f88748.jpg';

const seo = {
  title: 'Posty a investiční inspirace | RRInvestments',
  description: 'Aktuální myšlenky a komentáře k investování do nemovitostí od Reného Rypara.',
  breadcrumbs: [
    { name: 'Domů', url: '/' },
    { name: 'Posty', url: '/posts' },
  ],
};
---
<Fragment>
<PageShell {seo}>
  <PageHero title="Posty" image={heroImage} anchorId="#posty" />

  <section id="posty" class="bg-[#f5f5f5] py-24">
    <div class="mx-auto flex w-full max-w-6xl flex-col gap-12">
      <header class="px-6 text-center">
        <p class="text-xs uppercase tracking-[0.3em] text-neutral-500">Blog</p>
        <h1 class="mt-2 font-serif text-4xl">Posty z LinkedIn</h1>
        <p class="mt-3 text-sm text-neutral-600">
          Výběr publikovaných myšlenek, komentářů a analýz. Pro více obsahu sledujte LinkedIn profil.
        </p>
      </header>

      <div class="grid gap-8 px-6 md:grid-cols-2">
        {posts.map((post) => (
          <a
            href={`/posts/${post.id}`}
            class="group flex h-full flex-col overflow-hidden rounded-3xl border border-neutral-200 bg-white shadow-sm transition hover:-translate-y-1 hover:border-neutral-300 hover:shadow-lg focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-neutral-400"
          >
            {post.imageUrl && (
              <img
                src={post.imageUrl}
                alt={post.title}
                class="h-56 w-full object-cover transition duration-300 group-hover:scale-[1.02]"
                loading="lazy"
                decoding="async"
              />
            )}
            <div class="flex flex-1 flex-col gap-4 p-6">
              <div>
                <p class="text-xs uppercase tracking-[0.3em] text-neutral-500">{formatDate(post.publishedAt)}</p>
                <h2 class="mt-2 font-serif text-2xl transition group-hover:text-neutral-500">{post.title}</h2>
              </div>
              <p class="text-sm text-neutral-600">{truncate(post.content)}</p>
              <div class="mt-auto flex items-center gap-3 pt-4">
                <span class="rounded-full bg-neutral-900 px-5 py-2 text-xs uppercase tracking-[0.3em] text-white transition group-hover:bg-neutral-700">
                  Detail
                </span>
                {post.linkedinUrl && (
                  <span class="rounded-full border border-neutral-300 px-5 py-2 text-xs uppercase tracking-[0.3em] text-neutral-700 transition group-hover:border-neutral-500">
                    Na LinkedIn
                  </span>
                )}
              </div>
            </div>
          </a>
        ))}
        {posts.length === 0 && (
          <div class="col-span-full rounded-3xl border border-dashed border-neutral-300 bg-white p-12 text-center text-neutral-500">
            Zatím nejsou publikované žádné posty. Sledujte LinkedIn pro aktuální novinky.
          </div>
        )}
      </div>
    </div>
  </PageShell>
</Fragment>
</PageShell>
