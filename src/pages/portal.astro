---
import Layout from '../layouts/Layout.astro';
import PageHero from '../components/PageHero.astro';
import SiteFooter from '../components/SiteFooter.astro';

const heroImage = '/assets/Copy of 3-23f88748.jpg';
---
<Layout
  title="René Rypar | Portál"
  description="Přihlaste se do privátního portálu a sledujte detailní informace o transakcích, dokumentech a výkonnosti portfolia v reálném čase."
  metaImage={heroImage}
>
  <PageHero title="Portál" image={heroImage} anchorId="#portal" />

  <section id="portal" class="bg-white py-20">
    <div class="mx-auto flex w-full max-w-4xl flex-col items-center gap-6 px-6 text-center">
      <p class="text-lg font-semibold text-neutral-700">Portál dočasně mimo provoz</p>
    </div>
  </section>

  <SiteFooter />
</Layout>
